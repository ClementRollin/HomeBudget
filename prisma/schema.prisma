datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Family {
  id         String   @id @default(cuid())
  name       String
  slug       String   @unique
  inviteCode String   @unique
  createdAt  DateTime @default(now())
  users      User[]
  members    FamilyMember[]
  sheets     Sheet[]
}

model User {
  id        String   @id @default(cuid())
  name      String?
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  family    Family   @relation(fields: [familyId], references: [id])
  familyId  String
  sheets    Sheet[]
  member    FamilyMember?
}

model FamilyMember {
  id          String   @id @default(cuid())
  family      Family   @relation(fields: [familyId], references: [id])
  familyId    String
  user        User?    @relation(fields: [userId], references: [id])
  userId      String?  @unique
  displayName String
  slug        String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  salaries    Salary[]
  charges     Charge[]

  @@unique([familyId, slug])
}

model Sheet {
  id        String    @id @default(cuid())
  year      Int
  month     Int
  family    Family    @relation(fields: [familyId], references: [id])
  familyId  String
  owner     User?     @relation(fields: [ownerId], references: [id])
  ownerId   String?
  salaries  Salary[]
  charges   Charge[]
  budgets   Budget[]
  createdAt DateTime  @default(now())
}

model Salary {
  id       String  @id @default(cuid())
  sheet    Sheet   @relation(fields: [sheetId], references: [id])
  sheetId  String
  member   FamilyMember? @relation(fields: [memberId], references: [id])
  memberId String?
  encryptedLabel  String @default("")
  encryptedAmount String @default("")
  createdAt       DateTime @default(now())
}

model Charge {
  id       String        @id @default(cuid())
  sheet    Sheet         @relation(fields: [sheetId], references: [id])
  sheetId  String
  category ChargeCategory @default(FIXE_COMMUN)
  member   FamilyMember? @relation(fields: [memberId], references: [id])
  memberId String?
  encryptedLabel  String @default("")
  encryptedAmount String @default("")
  createdAt       DateTime @default(now())
}

model Budget {
  id       String  @id @default(cuid())
  sheet    Sheet   @relation(fields: [sheetId], references: [id])
  sheetId  String
  encryptedLabel  String @default("")
  encryptedAmount String @default("")
  createdAt       DateTime @default(now())
}

enum ChargeCategory {
  FIXE_COMMUN
  FIXE_INDIVIDUEL
  EXCEPTIONNEL_COMMUN
  EXCEPTIONNEL_INDIVIDUEL
}
